<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/activity_main_text_cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cep"
        android:ems="20"
        android:inputType="textPostalAddress"
        android:importantForAutofill="no"
        android:layout_margin="8dp"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/activity_main_bt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_text_cep"
        android:layout_margin="8dp"
        android:text="@string/pesquisar" />

    <ListView
        android:id="@+id/activity_main_list_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_main_bt_search"
        android:layout_margin="8dp" />
</RelativeLayout>